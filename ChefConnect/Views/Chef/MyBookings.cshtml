@model ChefViewModel
@{
    ViewData["title"] = "My-Bookings";
}

<table>
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Customer Phone</th>
            <th>Order Recipe</th>
            <th>Order Date</th>
            <th>Time</th>
            <th>Guest Quantity</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model.UpComingOrders)
        {
            <tr>
                <td>@booking.Customer.Name</td>
                <td>@booking.Customer.PhoneNumber</td>
                <td>@booking.OrderRecipes.FirstOrDefault().ChefRecipes.RecipeName</td>
                <td>@booking.OrderRecipes.FirstOrDefault().OrderDate</td>
                <td>@booking.OrderRecipes.FirstOrDefault().TimeSlot.TimeSlot</td>
                <td>@booking.OrderRecipes.FirstOrDefault().GuestQuantity</td>
                <td>@booking.OrderRecipes.FirstOrDefault().RecipeTotal</td>
                <td><a href="#">View</a></td>
            </tr>
        }   
    </tbody>
</table>




@*Review Moderation ChatBot*@
<button class="chatbot-toggler">
    <span class="material-symbols-rounded">mode_comment</span>
    <span class="material-symbols-outlined">close</span>
</button>
<div class="chatbot">
    <header>
        <h2>Review Moderation Bot</h2>
        <span class="close-btn material-symbols-outlined">close</span>
    </header>
    <ul class="chatbox">
        <li class="chat incoming">
            <span class="material-symbols-outlined">smart_toy</span>
            <p>Hi there 👋<br>Welcome to Review Moderation Help.</p>
        </li>
    </ul>
    <div class="chat-input">
        <textarea placeholder="Enter a message..." spellcheck="false" required></textarea>
        <span id="send-btn" class="material-symbols-rounded">send</span>
    </div>
</div>

