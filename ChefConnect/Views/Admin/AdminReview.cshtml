@model List<Reviews>

@{
    ViewData["title"] = "Admin-Review";
}


    <h2>Reviews</h2>
    <table class="admin-review">
        <thead>
            <tr>
                <th>Review Description</th>
                <th>Ratings</th>
                <th>Customer</th>
                <th>Chef</th>
                <th>
                    Recipe
                </th>
                <th>Date</th>
                <th>Review Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var review in Model)
            {
                <tr>
                    <td>
                        @review.ReviewDescription
                    </td>
                    <td>
                        @review.Ratings
                    </td>
                    <td>
                        @review.Customer.Name
                    </td>
                    <td>
                        @review.ChefRecipe.Chef.Name
                    </td>
                    <td>
                        @review.ChefRecipe.RecipeName
                    </td>
                    <td>
                        -
                    </td>
                    <td>
                        @review.Status
                    </td>
                    <td>
                        <a class="btn-approve " asp-controller="Admin" asp-action="ApproveReview" asp-route-id="@review.ReviewsId">Approve</a>
                        <a class="btn-reject " asp-controller="Admin" asp-action="RejectReview" asp-route-id="@review.ReviewsId">Reject</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>