@model CustomerViewModel

@{
    ViewData["title"] = "Secure Checkout Page";
}
<style>
    .error-message {
        color: red;
        font-size: 0.8em;
    }
</style>

<div class="row">
    <div class="col-md-8">
        <section>
            <div class="cart-header">
                <h2>Address</h2>
            </div>
            <div class="row">
                @foreach (var address in Model.addressList)
                {

                    <div class="col-md-6">
                        <!-- Card -->
                        <div class="card-home" onclick="selectCard(this)">
                            <!-- Card image -->
                            <!-- Card body -->
                            <div class="card-body" >
                                <div class="form-group" id="addressCard" >
                                    <label for="selectAddress">
                                        <input type="radio" name="selectAddress" value="@address.AddressesId" id="@address.AddressesId" class="card-radio" />
                                        <h5 class="card-title">Name: @address.Name</h5>
                                        <p class="card-text">Apt Number: @address.AptNumber </p>
                                        <p class="card-text">Street Address: @address.StreetAddress</p>
                                        <p class="card-text">City: @address.City</p>
                                        <p class="card-text">Province: @address.Province</p>
                                        <p class="card-text">
                                            Postal Code: @address.PostalCode
                                        </p>
                                        <p class="card-text">
                                            Country: @address.Country
                                        </p>
                                        <p class="card-text">
                                            Phone Number: @address.PhoneNumber
                                        </p>
                                    </label>
                                </div>
                               

                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>

        <section>
            <div class="cart-header">
                <h2>Payment Information</h2>
            </div>
            <div class="cart-container">
                <div class="cart-items pb-3">
                    <div class="cart-item">

                        <div class="row">
                            <form asp-controller="" asp-action="" method="post">
                                <input type="hidden" asp-for="@Model.NewPaymentMethod.CustomerId" value="@Model.ActiveUser.Id" />

                                <label asp-for="@Model.NewPaymentMethod.PaymentType">Payment Type:</label>
                                <select class="form-select" asp-for="@Model.NewPaymentMethod.PaymentType">
                                    <option value="CreditCard">Credit Card</option>
                                    <option value="DebitCard">Debit Card</option>
                                    <option value="PayPal">PayPal</option>
                                </select>
                                <label asp-for="@Model.NewPaymentMethod.CardNumber">Card Number:</label>
                                <input type="text" asp-for="@Model.NewPaymentMethod.CardNumber" />
                                <label asp-for="@Model.NewPaymentMethod.CardExpiry">Expiry Date:</label>
                                <input type="text" asp-for="@Model.NewPaymentMethod.CardExpiry" />
                                <label asp-for="@Model.NewPaymentMethod.CardCvv">CVV:</label>
                                <input type="text" asp-for="@Model.NewPaymentMethod.CardCvv" />
                                <label asp-for="@Model.NewPaymentMethod.NameOnCard">Card Holder Name:</label>
                                <input type="text" asp-for="@Model.NewPaymentMethod.NameOnCard" />

                                <button type="submit" class="btn btn-primary">Save Payment</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>


