@model CustomerViewModel
@{
    ViewData["title"] = "Customer-Home";
}
@if (TempData.Keys.Contains("ConfirmEmailMessage"))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <span>@TempData["ConfirmEmailMessage"]<a asp-controller="Home" asp-action="ResendVerificationMail" asp-route-username="@Model.ActiveUser.UserName"> Resend Verification.</a></span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData.Keys.Contains("EmailReSentMessage"))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <span>@TempData["EmailReSentMessage"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<h1>
    Customer Home
</h1>

<div class="row">
    <h1>Your Receipes</h1>
    @foreach (var recipe in Model.AllRecipes)
    {
        <div class="col-md-3">
            <!-- Card -->
            <div class="card" style="width: 350px;">
                <!-- Card image -->
                <img style="width:350px;height:350px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(recipe.RecipeImage))" class="card-img-top" alt="...">
                <!-- Card body -->
                <div class="card-body">
                    <h5 class="card-title">
                        @recipe.RecipeName
                    </h5>
                    <p class="card-text">@recipe.RecipeDescription</p>
                    <a asp-controller="Customer" asp-action="GetReviewsPage" asp-route-id="@recipe.ChefRecipesId" asp-route-username="@Model.ActiveUser.UserName" class="btn btn-primary">Add Review</a>
                    <a asp-controller="Customer" asp-action="GetBookingPage" asp-route-id="@recipe.ChefRecipesId" asp-route-username="@Model.ActiveUser.UserName" class="btn btn-primary">Book</a>

                </div>
            </div>
        </div>
    }
</div>