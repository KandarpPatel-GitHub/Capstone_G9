@{
    ViewData["title"] = "Forgot-Password";
}

<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">Forgot Password?</h5>
        <form method="post" asp-action="SendForgotPasswordLink" asp-controller="Home">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <label for="email">Please enter the email linked to your account where we can send link to reset password:</label>
                <input id="email" name="emailinput" class="form-control" placeholder="Email Address"/>
                <span class="text-danger"></span>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary" style="margin-top:10px">Send</button>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <a asp-controller="Home" asp-action="Login" class="btn btn-primary" style="margin-top:10px">GO Back</a>
                        </div>
                    </div>
                </div>
                
            </div>
        </form>
    </div>
</div>
